
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Department Employees </title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	@*<link rel="stylesheet" href="https://code.jquery.com/ui/1.9.1/themes/base/jquery-ui.css" />*@

	<link rel="stylesheet" href="https://code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css" />

	<script src="https://cdn.jsdelivr.net/npm/vue"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
	<style>
		.navbar-nav ul {
			display: none;
		}

		.navbar-nav li:hover > ul {
			display: block;
		}
	</style>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DepartmentEmployees.Web</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Enterprise" asp-action="Index">Enterprise</a>
							<ul>
								<li><a class="nav-link text-dark" asp-area="" asp-controller="Enterprise" asp-action="GetAll">Enterprise List</a></li>
								<li><a class="nav-link text-dark" asp-area="" asp-controller="Enterprise" asp-action="EnterprisesDetails">Enterprise Management</a></li>
							</ul>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Department" asp-action="Index">Departments</a>
							<ul>
								<li><a class="nav-link text-dark" asp-area="" asp-controller="Department" asp-action="GetAll">Departments List</a></li>
								<li><a class="nav-link text-dark" asp-area="" asp-controller="Department" asp-action="DepartmentDetails">Departments Management</a></li>
							</ul>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Index">Employees</a>
							<ul>
								<li><a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="GetAll">Employees List</a></li>
								<li><a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="EmployeeDetails">Employees Management</a></li>
							</ul>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="DepartmentEmployee" asp-action="Index">Department Employees</a>
							<ul>
								<li><a class="nav-link text-dark" asp-area="" asp-controller="DepartmentEmployee" asp-action="GetAll">Department Employees List</a></li>
								<li><a class="nav-link text-dark" asp-area="" asp-controller="DepartmentEmployee" asp-action="DepartmentEmployeeDetails">Department Employees Management</a></li>
							</ul>
						</li>
					</ul>

				</div>
			</div>

		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>
	<div class="text-center" id="msg">
		<strong>@ViewBag.StatusMessage</strong>
	</div>
	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2022 - Department Employees - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
	$( document ).ready( function () {
		setTimeout( function () {
			$( "#msg" ).fadeOut();
		}, 2000 );
	} );
</script>
